<!-- form handling -->
<form method="post" id="update_user">
    <div class="alertk" style="display: none;">
        <strong>Successful!!</strong> <b>User Was Updated Successfully</b>
    </div><br></br>
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id%>">
            <input type="text" name="name" value="<%= user.name%>">
        </div>

        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="email" name="email" value="<%= user.email%>">
        </div>

        <div class="form-group">
            <label for="gender" class="radio-label">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="gender" value="Male" <%=user.gender=='Male' ? 'checked': ''%> >
                <label for="radio-1" class="radio-label">Male</label>

            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Female" <%=user.gender=='Female' ? 'checked': ''%>>
                <label for="radio-2" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="status" class="radio-label">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="Active" <%=user.status=='Active' ? 'checked': ''%>>
                <label for="radio-3" class="radio-label">Active</label>
            </div>
            <div class="radio inline">

                <input type="radio" id="radio-4" name="status" value="Inactive" <%=user.status=='Inactive' ? 'checked': ''%>>
                <label for="radio-4" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update"><strong>Update</strong> </button>
        </div>
    </div>
</form>
<!-- /form handling -->